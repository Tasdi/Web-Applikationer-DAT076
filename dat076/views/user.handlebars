<!DOCTYPE html>
<html>
    <head>
        <title>{{title}}</title>

        <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.css">
        <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
        <link rel="stylesheet" href="/resources/demos/style.css">

        <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
        <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
        <script src="//cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>
        <script>
            $( function() {
            $( "#datepicker" ).datepicker();
            } );
        </script>
        <script>
            $( function() {
                $( "#startTime" ).timepicker();
            } );
        </script>
        <script>
            $( function() {
                $( "#endTime" ).timepicker();
            } );
        </script>
    </head>
    {{#if user.isAdmin}}
        <body>
            <h1> Welcomer Dr. {{user.name}}</h1>
            <hr></hr>
            <div>
                <button typpe="button" class="adminButton">Show current bookings</button>
                <hr></hr>
            </div>
            <div>
                <button type="button" class="adminButton">Create a new booking</button>

                <div class="form-group">
                    <label>Date</label><br>
                    <input type="text" class="form-control:focus" placeholder="Date" id="datepicker">
                </div>

                <div class="form-group">
                    <label>Start time</label><br>
                    <input type="text" class="form-control:focus" placeholder="startTime" id="startTime">
                </div>

                <div class="form-group">
                    <label>End time</label><br>
                    <input type="text" class="form-control:focus" placeholder="endTime" id="endTime">
                </div>
                <p>
                    <button type="submit" class="btn btn-success">Submit changes</button>
                </p>
                <hr></hr>
            </div>
            <div>
            <div>
                <button typpe="button" class="adminButton">Edit your bookings</button>
                <hr></hr>
            </div>
             <div>
                <button typpe="button" class="adminButton">Show all patients</button>
                <hr></hr>
            </div>
        </body>
    {{else}}
        <h1> Hi client</h1>
    {{/if}}
</html>